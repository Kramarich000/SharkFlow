{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "src",
    "paths": {
      "@features/*": ["features/*"],
      "@common/*": ["common/*"],
      "@pages/*": ["pages/*"],
      "@validators/*": ["validators/*"],
      "@utils/*": ["utils/*"],
      "@assets/*": ["assets/*"],
      "@config/*": ["config/*"],
      "@store/*": ["store/*"],
      "@lib/*": ["lib/*"]
    }
  },
  "include": ["src", "public/disableErrors.js"]
}
